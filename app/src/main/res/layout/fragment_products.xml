<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_products"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProductBrowserFragment">

    <!-- TODO: Update blank fragment layout -->
  <View
    android:id="@+id/divider11"
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:background="@color/custom_grey"
    app:layout_constraintBottom_toTopOf="@+id/recyclerView_product_browser_categories"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerView_product_browser_categories"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerView_product_browser_tags"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
